#include <iostream>
using namespace std;
 
int main()
{
    float frh, cel;
		cout << "\n\n Convert temperature in Celsius to Fahrenheit :\n";
		cout << "---------------------------------------------------\n";	
    cout << " Input the temperature in Celsius : ";
    cin >> cel;
    frh = (cel * 9.0) / 5.0 + 32;
    cout << " The temperature in Celsius    : " << cel << endl;
    cout << " The temperature in Fahrenheit : " << frh << endl;
	cout << endl;
    return 0;
}
